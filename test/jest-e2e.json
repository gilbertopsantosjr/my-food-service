{
  "rootDir": ".",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "\\.(e2e-test|e2e-spec).(ts|tsx|js)$",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,tsx,ts}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": ["json", "lcov"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@core/(.*)$": "<rootDir>/../libs/core/src/$1"
  }
}
